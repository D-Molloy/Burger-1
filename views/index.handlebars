<div class="container">
	<div class="row">
		<div class="col-sm-12 text-center" id="top">
			<img src="/assets/images/burger.png" width = "300" alt="burger" />
			<h1> Eat-Da-Burger! </h1>
		</div>
		<div class="col-sm-7 text-center">
			<div class="row">
			  {{#each burger}}
			  	{{#unless this.devoured}}
				<div class="row burger-rack">
				<div class="col-sm-8 text-center" style="font-size: xx-large;">
					<pre>{{this.id}}. {{this.name}}
					</pre>
				</div>
				<div class="col-sm-4 text-center">
					<form class="button-size devour-form">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>	
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-sm-5 text-center" class="burger-rack">
			  {{#each burger}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-button">Submit</button>
			</form>
			<p>Enter a delicious burger to eat and then "Submit".</p>
		</div>
	</div>
</div>
